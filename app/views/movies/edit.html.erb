<%= form_with model: @movie do |f| %>
  <div>
    <%= f.label "Título:" %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label "Ano de Lançamento:" %>
    <%= f.number_field :year %>
  </div>
  <div>
    <%= f.label "Sinopse:" %>
    <%= f.text_area :sinopsis %>
  </div>
  <div>
    <%= f.label "País de Origem:" %>
    <%= f.text_field :country %>
  </div>
  <div>
    <%= f.label "Duração (min):" %>
    <%= f.number_field :duration %>
  </div>
  <div>
    <%= f.label "Diretor:" %>
    <%= f.collection_select(:director_id, Director.all, :id, :name) %>
  </div>
  <div>
  <%= f.label "Genre:" %>
  <%= f.collection_select(:genre_id, Genre.all, :id, :name) %>
  </div>

  <%= f.submit 'Salvar' %>
<% end %>
<br>

<div><%= link_to 'Voltar', movies_path %></div>
